{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "CheckReceipt",
  "type": "object",
  "properties": {
    "diff": {
      "$ref": "#/$defs/DiffMeta"
    },
    "findings": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/Finding"
      }
    },
    "schema": {
      "type": "string"
    },
    "timing": {
      "anyOf": [
        {
          "$ref": "#/$defs/TimingMetrics"
        },
        {
          "type": "null"
        }
      ]
    },
    "tool": {
      "$ref": "#/$defs/ToolMeta"
    },
    "verdict": {
      "$ref": "#/$defs/Verdict"
    }
  },
  "required": [
    "schema",
    "tool",
    "diff",
    "findings",
    "verdict"
  ],
  "$defs": {
    "DiffMeta": {
      "type": "object",
      "properties": {
        "base": {
          "type": "string"
        },
        "context_lines": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "files_scanned": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "head": {
          "type": "string"
        },
        "lines_scanned": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "scope": {
          "$ref": "#/$defs/Scope"
        }
      },
      "required": [
        "base",
        "head",
        "context_lines",
        "scope",
        "files_scanned",
        "lines_scanned"
      ]
    },
    "Finding": {
      "type": "object",
      "properties": {
        "column": {
          "type": [
            "integer",
            "null"
          ],
          "format": "uint32",
          "minimum": 0
        },
        "line": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "match_text": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "rule_id": {
          "type": "string"
        },
        "severity": {
          "$ref": "#/$defs/Severity"
        },
        "snippet": {
          "type": "string"
        }
      },
      "required": [
        "rule_id",
        "severity",
        "message",
        "path",
        "line",
        "match_text",
        "snippet"
      ]
    },
    "Scope": {
      "type": "string",
      "enum": [
        "added",
        "changed",
        "modified",
        "deleted"
      ]
    },
    "Severity": {
      "type": "string",
      "enum": [
        "info",
        "warn",
        "error"
      ]
    },
    "TimingMetrics": {
      "description": "Timing metrics for performance analysis.",
      "type": "object",
      "properties": {
        "diff_parse_ms": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0
        },
        "evaluation_ms": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0
        },
        "rule_compile_ms": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0
        },
        "total_ms": {
          "type": "integer",
          "format": "uint64",
          "minimum": 0
        }
      },
      "required": [
        "total_ms",
        "diff_parse_ms",
        "rule_compile_ms",
        "evaluation_ms"
      ]
    },
    "ToolMeta": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "version"
      ]
    },
    "Verdict": {
      "type": "object",
      "properties": {
        "counts": {
          "$ref": "#/$defs/VerdictCounts"
        },
        "reasons": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "$ref": "#/$defs/VerdictStatus"
        }
      },
      "required": [
        "status",
        "counts",
        "reasons"
      ]
    },
    "VerdictCounts": {
      "type": "object",
      "properties": {
        "error": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "info": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "suppressed": {
          "description": "Number of matches suppressed via inline directives.",
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "warn": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        }
      },
      "required": [
        "info",
        "warn",
        "error"
      ]
    },
    "VerdictStatus": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "pass",
            "warn",
            "fail"
          ]
        },
        {
          "description": "For cockpit mode when inputs are missing or check cannot run.",
          "type": "string",
          "const": "skip"
        }
      ]
    }
  }
}