{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SensorReport",
  "description": "The `sensor.report.v1` envelope for Cockpit ecosystem integration.",
  "type": "object",
  "properties": {
    "artifacts": {
      "description": "List of artifacts produced.",
      "type": "array",
      "items": {
        "$ref": "#/$defs/Artifact"
      }
    },
    "data": {
      "description": "Additional data payload (diff metadata, etc.)."
    },
    "findings": {
      "description": "Findings in sensor format.",
      "type": "array",
      "items": {
        "$ref": "#/$defs/SensorFinding"
      }
    },
    "run": {
      "description": "Run timing and capability information.",
      "$ref": "#/$defs/RunMeta"
    },
    "schema": {
      "description": "Schema identifier, always \"sensor.report.v1\".",
      "type": "string"
    },
    "tool": {
      "description": "Tool metadata.",
      "$ref": "#/$defs/ToolMeta"
    },
    "verdict": {
      "description": "Overall verdict.",
      "$ref": "#/$defs/Verdict"
    }
  },
  "required": [
    "schema",
    "tool",
    "run",
    "verdict",
    "findings"
  ],
  "$defs": {
    "Artifact": {
      "description": "An artifact produced by the sensor.",
      "type": "object",
      "properties": {
        "format": {
          "description": "Format of the artifact (e.g., \"json\", \"sarif\", \"markdown\").",
          "type": "string"
        },
        "path": {
          "description": "Path to the artifact file.",
          "type": "string"
        }
      },
      "required": [
        "path",
        "format"
      ]
    },
    "CapabilityStatus": {
      "description": "Status of a capability (e.g., git availability).",
      "type": "object",
      "properties": {
        "detail": {
          "description": "Human-readable detail for diagnostics.",
          "type": [
            "string",
            "null"
          ]
        },
        "reason": {
          "description": "Stable token reason (e.g., \"missing_base\", \"tool_error\").",
          "type": [
            "string",
            "null"
          ]
        },
        "status": {
          "description": "Status: \"available\", \"unavailable\", or \"skipped\".",
          "type": "string"
        }
      },
      "required": [
        "status"
      ]
    },
    "RunMeta": {
      "description": "Run timing and capability status.",
      "type": "object",
      "properties": {
        "capabilities": {
          "description": "Capability status map (e.g., \"git\" -> available/unavailable).",
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/CapabilityStatus"
          }
        },
        "duration_ms": {
          "description": "Duration in milliseconds.",
          "type": "integer",
          "format": "uint64",
          "minimum": 0
        },
        "ended_at": {
          "description": "ISO 8601 timestamp when the run ended.",
          "type": "string"
        },
        "started_at": {
          "description": "ISO 8601 timestamp when the run started.",
          "type": "string"
        }
      },
      "required": [
        "started_at",
        "ended_at",
        "duration_ms"
      ]
    },
    "SensorFinding": {
      "description": "A finding in sensor.report.v1 format.",
      "type": "object",
      "properties": {
        "check_id": {
          "description": "Check identifier (constant: \"diffguard.pattern\").",
          "type": "string"
        },
        "code": {
          "description": "Rule code (maps from rule_id, e.g., \"rust.no_unwrap\").",
          "type": "string"
        },
        "data": {
          "description": "Additional data (match_text, snippet)."
        },
        "fingerprint": {
          "description": "Stable fingerprint (full SHA-256, 64 hex chars).",
          "type": "string"
        },
        "help": {
          "description": "Optional help text.",
          "type": [
            "string",
            "null"
          ]
        },
        "location": {
          "description": "Location in the source.",
          "$ref": "#/$defs/SensorLocation"
        },
        "message": {
          "description": "Human-readable message.",
          "type": "string"
        },
        "severity": {
          "description": "Finding severity.",
          "$ref": "#/$defs/Severity"
        },
        "url": {
          "description": "Optional URL for more information.",
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "check_id",
        "code",
        "severity",
        "message",
        "location",
        "fingerprint"
      ]
    },
    "SensorLocation": {
      "description": "Location in sensor.report.v1 format.",
      "type": "object",
      "properties": {
        "column": {
          "description": "Optional column number (1-based).",
          "type": [
            "integer",
            "null"
          ],
          "format": "uint32",
          "minimum": 0
        },
        "line": {
          "description": "Line number (1-based).",
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "path": {
          "description": "Repo-relative path with forward slashes.",
          "type": "string"
        }
      },
      "required": [
        "path",
        "line"
      ]
    },
    "Severity": {
      "type": "string",
      "enum": [
        "info",
        "warn",
        "error"
      ]
    },
    "ToolMeta": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "version"
      ]
    },
    "Verdict": {
      "type": "object",
      "properties": {
        "counts": {
          "$ref": "#/$defs/VerdictCounts"
        },
        "reasons": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "$ref": "#/$defs/VerdictStatus"
        }
      },
      "required": [
        "status",
        "counts",
        "reasons"
      ]
    },
    "VerdictCounts": {
      "type": "object",
      "properties": {
        "error": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "info": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "suppressed": {
          "description": "Number of matches suppressed via inline directives.",
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "warn": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        }
      },
      "required": [
        "info",
        "warn",
        "error"
      ]
    },
    "VerdictStatus": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "pass",
            "warn",
            "fail"
          ]
        },
        {
          "description": "For cockpit mode when inputs are missing or check cannot run.",
          "type": "string",
          "const": "skip"
        }
      ]
    }
  }
}